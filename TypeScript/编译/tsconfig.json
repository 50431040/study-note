{
  "include": ["./src/**/*"],
  // "exclude": ["./src/2/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES2015"],
    // "outFile": "./dist/app.js"
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "noEmit": false,
    "noEmitOnError": false,
    "strict": false,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false
  }
}